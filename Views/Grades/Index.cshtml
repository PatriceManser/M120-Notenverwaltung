@model Notenverwaltung.Models.ApplicationUser

@{
    ViewData["Title"] = "Index";
}

<h1>Grades</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => "Name")
            </th>
            <th>
                @Html.DisplayNameFor(model => "Grade")
            </th>
            <th>
                @Html.DisplayNameFor(model => "Weight")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SchoolClass.Profession.Modules) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@Model.UserId">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
